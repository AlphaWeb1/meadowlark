<h1>Contact Meadowlark Travel</h1>
<p>{{note.note1}}</p>
<div class="row justify-content-center">
    <form method="post" action="/process-contact" class="col-xs-12 col-sm-8 col-md-7 col-lg-6 col-xl-5">
        <div class="form-group">
            <label for="name" class="form-label">Names</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
        </div>
        <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea name="message" id="message" cols="30" rows="4" class="form-control" placeholder="Type your message here..."></textarea>
        </div>
        <div class="form-group">
            <button type="submit" name="send" class="btn btn-block btn-outline-success">Send Message</button>
        </div>
    </form>
</div>